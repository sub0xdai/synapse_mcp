# Synapse MCP Environment Configuration
# Copy this file to .env and update with your actual credentials
# Environment variables take precedence over config.toml file

# ===== Neo4j Database Configuration =====
# Legacy environment variables (for backward compatibility)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTIONS=10
NEO4J_FETCH_SIZE=500

# New structured environment variables (recommended)
# These follow SYNAPSE_SECTION_KEY format
# SYNAPSE_NEO4J_URI=bolt://localhost:7687
# SYNAPSE_NEO4J_USER=neo4j
# SYNAPSE_NEO4J_PASSWORD=password
# SYNAPSE_NEO4J_DATABASE=neo4j
# SYNAPSE_NEO4J_MAX_CONNECTIONS=10
# SYNAPSE_NEO4J_FETCH_SIZE=500

# ===== Server Configuration =====
# SYNAPSE_SERVER_HOST=localhost
# SYNAPSE_SERVER_PORT=8080

# ===== Runtime Configuration =====
SYNAPSE_VERBOSE=false
SYNAPSE_CONTEXT_FILE=.synapse_context

# ===== Development/Testing Settings =====
# Uncomment for integration tests
# NEO4J_TEST_URI=bolt://localhost:7687
# NEO4J_TEST_USER=neo4j
# NEO4J_TEST_PASSWORD=password